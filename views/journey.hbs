<body>
    <section id='canvasArea'>
        <div id='sky'></div>
        <img id='stars' src="assets/images/sky/starry sky.png"></div>
        <div id='sunrise'></div>
        <div id='sun'><div id="glow"></div></div>
        <div id='darkMoon'></div>
        <div id='ground'></div>
        <div id='path'></div>

    <script src="assets/javascript/journey.js"></script>
    <link rel="stylesheet" href="assets/css/journey.css">
</head>
<body>
    <div id='playerInfo' class='hidden'>
        {
            "name": "{{name}}",
            "progress": {{progress}},
            "mokeballs": {{mokeballs}},
            "day", {{day}},
            "time": {{time}},
            "food": {{food}},
            "money": {{money}},
            "posse": [
                {{#each posse as |moke|}}
                {{#if @index}},{{/if}}{
                    "name": "{{moke.name}}",
                    "health": {{moke.health}},
                    "conditions": [
                        {{#each moke.conditions as |condition|}}
                            {{#if @index}},{{/if}}
                            {"name": "{{condition.name}}",
                            "timeRemaining": {{condition.timeRemaining}}
                            }
                        {{/each}}
                    ]
                }
                {{/each}}
            ]
        }
    </div>
    <div id='walkingPath'>
        <div id='sky'></div>
        <div id='sun'></div>
        <div id='ground'></div>
        <div id='path'></div>
        <canvas id='canvas' width="1920" height="1080"></canvas>
        <div id="msgbox" class="hidden"><div id="msgbuttons"></div></div>    
    </div>
    <section id='controls'>
        <p id ='narrative'></p>
        <button id='huntButton' class='controlButton' onclick='hunt()'>hunt</button>
        <button id='restButton' class='controlButton' onclick='rest()'>rest</button>
        <button id='invButton' class='controlButton' onclick='inventory()'>inventory</button>
        <button id='partyButton' class='controlButton' onclick='partyStats()'>posse</button>
        <button id='optionsButton' class='controlButton' onclick='options()'>options</button>
    </section>
    <div id='posse'>
        Your Pokemon Posse:
    </div>
    <div id='rest'>
        Rest for how long?:
        <form id='restform' action="">
            <input id="restLength" type="number"> days
            <br><br>
            <button type="submit">ok</button>
            <button type="cancel" onclick="$('#restform').hide()"></button>
        </form>        
    </div>
    <div id='inventory'>
        Your items:
    </div>
    <div id='options'>
        <button onclick="closeOptions(); newGame(); unPause();">start over</button>
        <button onclick="closeOptions()">close</button>
    </div>
</body>

